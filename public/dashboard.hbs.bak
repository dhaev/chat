<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Logged in</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="">
</head>

<body>

    <h3> {{name}} logged in</h3>
    {{#if conversations}}
        {{#each conversations}}
        <a href="#" id="{{this._id}}" name="{{this._id}}" onclick="getConversation('{{this._id}}'); return false;">
            {{this.displayName}}
        </a>
        {{/each}}
    {{else}}
    <p>No conversations found</p>
    {{/if}}
{{!-- {{> _chat}} --}}

    <a href="/auth/logout">
        logout
    </a>
    <!--[if lt IE 7]>
            <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="#">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->

        {{> _chat}}

    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

<script>
    function getConversation(id) {
        //console.log('getConversation function is called with id:', id);
        // Replace with your API endpoint
        const url = 'http://localhost:3000/dashboard/getMessages';

        // Replace with the data you want to send
        const data = { id };

        axios.get(url, { params: data })
            .then(response => {
                //console.log(response.data);
            })
            .catch(error => {
                console.error(error);
            });
    }
</script>

</body>

</html>